      a(class=".category" href="/?category=3d") 3d
      a(class=".category" href="/?category=2d") 2d
      a(class=".category" href="/?category=fantasy") fantasy
      a(class=".category" href="/?category=sci-fi") sci-fi
      a(class=".category" href="/?category=fighting") fighting
      a(class=".category" href="/?category=action-rpg") action-rpg
      a(class=".category" href="/?category=action") action
